@{
    ViewData["Title"] = "Home";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Barber Shop</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
        }

        .hero-section {
            height: 100vh;
            background-image: url('https://images.unsplash.com/photo-1600948836101-f9ffda59d250?q=80&w=2036&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
            background-size: cover;
            background-position: center;
            color: white;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

            .hero-section .overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
            }

        .about-us-section .position-relative img {
            width: 100%;
            border-radius: 10px;
        }

        .services-section img {
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <section class="hero-section text-light">
        <div class="overlay"></div>
        <div class="container position-relative">
            <h1 class="display-4 fw-bold">Modern Barber Shop in the City</h1>
            <p class="lead">Where classic grooming meets contemporary style for the perfect look.</p>
            <a href="#about" class="btn btn-warning btn-lg text-white">Appointment</a>
        </div>
    </section>

    <section id="about" class="about-us-section py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 position-relative">
                    <img src="https://plus.unsplash.com/premium_photo-1664048712492-9d395c204e37?q=80&w=1915&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Barber" class="mb-4">
                </div>
                <div class="col-md-6">
                    <h2 class="fw-bold mb-4">About Us</h2>
                    <p class="mb-3">
                      we specialize in delivering top-notch grooming services tailored to your style and personality. Our skilled professionals ensure every haircut, shave, and color treatment leaves you looking and feeling your best. With a focus on quality and customer satisfaction, we aim to create a relaxing and modern experience for everyone who walks through our doors. Your style, our expertise!</>
                    <h5 class="fw-bold">Opening Hours</h5>
                    <p class="mb-4">09:00 am - 11:00 pm</p>
                    <a href="@Url.Action("Login", "User")" class="btn btn-warning btn-lg text-white">Learn More</a>
                </div>
            </div>
        </div>
    </section>

    <section id="services" class="services-section py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Our Services</h2>
                <p class="text-muted">Expert haircuts, smooth shaves, vibrant coloring, and flawless styling for your perfect look.</p>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow">
                        <img src="https://images.unsplash.com/photo-1503951914875-452162b0f3f1?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="Smooth Shave">
                        <div class="card-body text-center">
                            <div class="icon mb-3">
                                <img src="https://plus.unsplash.com/premium_photo-1661270415179-f7bcff006edb?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Icon" class="rounded-circle">
                            </div>
                            <h5 class="card-title fw-bold">Smooth Shave</h5>
                            <p class="card-text text-muted">Experience the perfect blend of precision and comfort for a clean and refreshed look.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow">
                        <img src="https://images.unsplash.com/photo-1581674210501-c760093514e8?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="Beard Triming">
                        <div class="card-body text-center">
                            <div class="icon mb-3">
                                <img src="https://images.unsplash.com/photo-1470259078422-826894b933aa?q=80&w=2074&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Icon" class="rounded-circle">
                            </div>
                            <h5 class="card-title fw-bold">Hair Coloring</h5>
                            <p class="card-text text-muted">Transform your style with vibrant, lasting colors tailored to your look and personality.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow">
                        <img src="https://plus.unsplash.com/premium_photo-1661382275998-6b429defd504?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="Haircut Styles">
                        <div class="card-body text-center">
                            <div class="icon mb-3">
                                <img src="https://plus.unsplash.com/premium_photo-1661645792456-82cbe40fbd8d?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Icon" class="rounded-circle">
                            </div>
                            <h5 class="card-title fw-bold">Haircut Styles</h5>
                            <p class="card-text text-muted">A fresh and stylish cut that matches your personality and keeps you looking sharp.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

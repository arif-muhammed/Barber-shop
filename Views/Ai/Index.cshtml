@{
    ViewData["Title"] = "Hairstyle Changer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Ai

<div class="container mt-5 d-flex justify-content-center align-items-center vh-100" style="background: linear-gradient(to right, #8360c3, #2ebf91);">
    <div class="card shadow-lg border-0" style="width: 100%; max-width: 900px; border-radius: 20px; overflow: hidden;">
        <div class="card-header text-white text-center" style="background: #2ebf91;">
            <h2 class="mb-0">Hairstyle Changer</h2>
            <p class="text-muted">Upload an image to try different hairstyles!</p>
        </div>
        <div class="card-body p-5">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center">
                    @TempData["Error"]
                </div>
            }

            <form asp-action="ProcessImage" method="post" enctype="multipart/form-data">
                <div class="mb-4">
                    <label for="image" class="form-label fw-bold">Choose an Image</label>
                    <input type="file" name="Image" id="image" class="form-control shadow" required />
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-lg text-white" style="background: #8360c3; border: none; border-radius: 30px; padding: 10px 30px;">Submit</button>
                </div>
            </form>

            @if (ViewData["EditedImages"] != null)
            {
                <div class="mt-5">
                    <h3 class="text-center">Edited Images</h3>
                    <div class="row mt-4">
                        @foreach (var image in (List<string>)ViewData["EditedImages"])
                        {
                            <div class="col-md-4">
                                <div class="card shadow-sm border-0 mb-4">
                                    <img src="data:image/jpeg;base64,@image" alt="Edited Image" class="card-img-top rounded" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

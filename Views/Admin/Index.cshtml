@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        .text-gradient {
            background: linear-gradient(45deg, #4facfe, #00f2fe);
            -webkit-background-clip: text;
            color: transparent;
        }

        .icon-circle {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
        }

        .card-hover:hover {
            transform: translateY(-10px);
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand text-gradient" href="#">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <form asp-controller="User" asp-action="Login" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section class="admin-panel">
        <div class="container py-5">
            <h1 class="text-center display-4 text-gradient mb-5">Admin Panel</h1>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card card-hover shadow-sm border-0">
                        <div class="card-body text-center">
                            <div class="icon-circle bg-primary text-white mb-3">
                                <i class="fas fa-user-tie fa-2x"></i>
                            </div>
                            <h4 class="card-title">Manage Employees</h4>
                            <p class="text-muted">Add, edit, or view employees</p>
                            <a asp-controller="Employee" asp-action="Index" class="btn btn-primary w-100">
                                Go to Employees
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-hover shadow-sm border-0">
                        <div class="card-body text-center">
                            <div class="icon-circle bg-success text-white mb-3">
                                <i class="fas fa-store fa-2x"></i>
                            </div>
                            <h4 class="card-title">Salon Details</h4>
                            <p class="text-muted">View or update salon information</p>
                            <a asp-controller="Salon" asp-action="Index" class="btn btn-success w-100">
                                Go to Salon
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-hover shadow-sm border-0">
                        <div class="card-body text-center">
                            <div class="icon-circle bg-warning text-white mb-3">
                                <i class="fas fa-concierge-bell fa-2x"></i>
                            </div>
                            <h4 class="card-title">Services</h4>
                            <p class="text-muted">Manage salon services</p>
                            <a asp-controller="Service" asp-action="Index" class="btn btn-warning text-white w-100">
                                Go to Services
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-hover shadow-sm border-0">
                        <div class="card-body text-center">
                            <div class="icon-circle bg-info text-white mb-3">
                                <i class="fas fa-calendar-check fa-2x"></i>
                            </div>
                            <h4 class="card-title">Manage Appointments</h4>
                            <p class="text-muted">Edit, view, or manage appointments</p>
                            <a asp-controller="Appointment" asp-action="Index" class="btn btn-info text-white w-100">
                                Go to Appointments
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
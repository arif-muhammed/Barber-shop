@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Hairdresser_Website.Models.Appointment

<div class="d-flex justify-content-center align-items-center vh-100" style="background: linear-gradient(to bottom, #6a11cb, #2575fc);">
    <div class="card shadow-lg border-0" style="width: 100%; max-width: 700px; border-radius: 20px; overflow: hidden;">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Edit Appointment</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="AppointmentId" />

                <div class="mb-4">
                    <label asp-for="ServiceId" class="form-label">Service</label>
                    <select asp-for="ServiceId" class="form-select shadow" asp-items="ViewBag.Services"></select>
                </div>

                <div class="mb-4">
                    <label asp-for="EmployeeId" class="form-label">Employee</label>
                    <select asp-for="EmployeeId" class="form-select shadow" asp-items="ViewBag.Employees"></select>
                </div>

                <div class="mb-4">
                    <label asp-for="AppointmentDate" class="form-label">Date</label>
                    <input asp-for="AppointmentDate" type="datetime-local" class="form-control shadow" />
                </div>

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-lg text-white" style="background: #6a11cb; border: none; border-radius: 30px; padding: 10px 30px;">
                        Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-lg text-white" style="background: #2575fc; border: none; border-radius: 30px; padding: 10px 30px;">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
